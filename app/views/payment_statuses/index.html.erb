<div class="page-header">
  <h1>
    Payment statuses

    <a href="/payment_statuses/new" class="btn btn-lg btn-success">New Payment status</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Active</th>

        <th>Last edited by</th>

        <th>Status name</th>

        <th>Actions</th>
      </tr>

      <% @payment_statuses.each do |payment_status| %>
      <tr>

        <td><%= payment_status.active %></td>

        <td><%= payment_status.last_edited_by %></td>

        <td><%= payment_status.status_name %></td>

        <td>

          <a href="/payment_statuses/<%= payment_status.id %>" class="btn btn-primary">Show</a>
          <a href="/payment_statuses/<%= payment_status.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_payment_status/<%= payment_status.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
