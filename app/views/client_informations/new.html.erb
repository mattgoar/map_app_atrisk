<!-- Validation failure messages -->
<% if @client_information.errors.any? %>
  <% @client_information.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Client Information</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_client_information" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for client_id -->

      <div class="form-group">
        <label for="client_id" class="control-label">
          Client
        </label>


        <input type="text" id="client_id" name="client_id" placeholder="Client" class="form-control" value="<%= @client_information.client_id %>">

      </div>



      <!-- Label and input for last_edited_by -->

      <div class="form-group">
        <label for="last_edited_by" class="control-label">
          Last edited by
        </label>


        <input type="text" id="last_edited_by" name="last_edited_by" placeholder="Last edited by" class="form-control" value="<%= @client_information.last_edited_by %>">

      </div>



      <!-- Label and input for last_contact_date -->

      <div class="form-group">
        <label for="last_contact_date" class="control-label">
          Last contact date
        </label>


        <input type="date" id="last_contact_date" name="last_contact_date" placeholder="Last contact date" class="form-control" value="<%= @client_information.last_contact_date %>">

      </div>



      <!-- Label and input for exec_sponsor -->

      <div class="form-group">
        <label for="exec_sponsor" class="control-label">
          Exec sponsor
        </label>


        <input type="text" id="exec_sponsor" name="exec_sponsor" placeholder="Exec sponsor" class="form-control" value="<%= @client_information.exec_sponsor %>">

      </div>



      <!-- Label and input for termination_notice -->

      <div class="form-group">
        <label for="termination_notice" class="control-label">
          Termination notice
        </label>


        <input type="date" id="termination_notice" name="termination_notice" placeholder="Termination notice" class="form-control" value="<%= @client_information.termination_notice %>">

      </div>



      <!-- Label and input for payment_status_id -->

      <div class="form-group">
        <label for="payment_status_id" class="control-label">
          Payment status
        </label>


        <input type="text" id="payment_status_id" name="payment_status_id" placeholder="Payment status" class="form-control" value="<%= @client_information.payment_status_id %>">

      </div>



      <!-- Label and input for balance -->

      <div class="form-group">
        <label for="balance" class="control-label">
          Balance
        </label>


        <input type="text" id="balance" name="balance" placeholder="Balance" class="form-control" value="<%= @client_information.balance %>">

      </div>



      <!-- Label and input for reactivation_date -->

      <div class="form-group">
        <label for="reactivation_date" class="control-label">
          Reactivation date
        </label>


        <input type="date" id="reactivation_date" name="reactivation_date" placeholder="Reactivation date" class="form-control" value="<%= @client_information.reactivation_date %>">

      </div>



      <!-- Label and input for expiration_date -->

      <div class="form-group">
        <label for="expiration_date" class="control-label">
          Expiration date
        </label>


        <input type="date" id="expiration_date" name="expiration_date" placeholder="Expiration date" class="form-control" value="<%= @client_information.expiration_date %>">

      </div>



      <!-- Label and input for annual_fee -->

      <div class="form-group">
        <label for="annual_fee" class="control-label">
          Annual fee
        </label>


        <input type="text" id="annual_fee" name="annual_fee" placeholder="Annual fee" class="form-control" value="<%= @client_information.annual_fee %>">

      </div>



      <!-- Label and input for sales_rep_id -->

      <div class="form-group">
        <label for="sales_rep_id" class="control-label">
          Sales rep
        </label>


        <input type="text" id="sales_rep_id" name="sales_rep_id" placeholder="Sales rep" class="form-control" value="<%= @client_information.sales_rep_id %>">

      </div>



      <!-- Label and input for type -->

      <div class="form-group">
        <label for="type" class="control-label">
          Type
        </label>


        <input type="text" id="contract_type" name="contract_type" placeholder="Type" class="form-control" value="<%= @client_information.contract_type %>">

      </div>



      <button class="btn btn-success">
        Create Client Information
      </button>
      or
      <a href="/client_informations">Cancel</a>

    </form>

  </div>
</div>
