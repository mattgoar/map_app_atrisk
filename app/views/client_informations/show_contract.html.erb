<div class="container">
  <div class="page-header">
    <h3>Contract Information - <%= @latest_client_information.client.clientname %></h3>
  </div>
<div class="row">
    <div class="col-xs-12 col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Current Detail</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <table class="table table-striped table-hover">
                <tr>

                  <th>Client</th>

                  <th>Contract Type</th>

                  <th>Sales rep</th>

                  <th>Annual fee</th>

                  <th>Expiration date</th>

                  <th>Termination notice</th>

                  <th>Last Edited By</th>

                  <th>Last Edited On</th>

                  <th>Action</th>
                </tr>

                <tr>

                  <td><%= @latest_client_information.client.clientname %></td>

                  <td><%= @latest_client_information.contract_type %></td>

                  <td><%= @latest_client_information.sales_rep.name %></td>

                  <td><%= @latest_client_information.annual_fee %></td>

                  <td><%= @latest_client_information.expiration_date %></td>
                  <td><%= @latest_client_information.termination_notice %></td>

                  <td><%= @latest_client_information.user.last_name + ', ' + @latest_client_information.user.first_name %></td>
                  <td><%= @latest_client_information.updated_at %></td>

                  <td><a href="/client_informations/<%= @latest_client_information.client_id %>/new_contract" class="btn btn-warning  btn-sm">Update</a>

                </tr>
               </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">History</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <table class="table table-striped table-hover">
                <tr>

                  <th>Client</th>

                  <th>Contract Type</th>

                  <th>Sales rep</th>

                  <th>Annual fee</th>

                  <th>Expiration date</th>

                  <th>Termination notice</th>

                  <th>Last Edited By</th>

                  <th>Last Edited On</th>

                  <th>Action</th>

                </tr>

                <% @client_information.each do |client| %>
                <tr>

                  <td><%= client.client.clientname %></td>

                  <td><%= client.contract_type %></td>

                  <td><%= client.sales_rep.name %></td>

                  <td><%= client.annual_fee %></td>

                  <td><%= client.expiration_date %></td>
                  <td><%= client.termination_notice %></td>

                  <td><%= client.user.last_name + ', ' + client.user.first_name %></td>
                  <td><%= client.updated_at %></td>

                  <td><a href=# class="btn btn-danger btn-sm">Revert</a>

                </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
