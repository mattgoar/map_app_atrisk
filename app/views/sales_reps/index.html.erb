<div class="page-header">
  <h1>
    Sales reps

    <a href="/sales_reps/new" class="btn btn-lg btn-success">New Sales rep</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Active</th>

        <th>Last edited by</th>

        <th>Name</th>

        <th>Actions</th>
      </tr>

      <% @sales_reps.each do |sales_rep| %>
      <tr>

        <td><%= sales_rep.active %></td>

        <td><%= sales_rep.last_edited_by %></td>

        <td><%= sales_rep.name %></td>

        <td>

          <a href="/sales_reps/<%= sales_rep.id %>" class="btn btn-primary">Show</a>
          <a href="/sales_reps/<%= sales_rep.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_sales_rep/<%= sales_rep.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
