<div class="page-header">
  <h3>Sales Rep #<%= @sales_rep.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Active</dt>
      <dd><%= @sales_rep.active %></dd>


      <dt>Last edited by</dt>
      <dd><%= @sales_rep.last_edited_by %></dd>


      <dt>Name</dt>
      <dd><%= @sales_rep.name %></dd>


    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/sales_reps" class="btn btn-primary">
        Back
      </a>
      <a href="/sales_reps/<%= @sales_rep.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_sales_rep/<%= @sales_rep.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>

    </div>
  </div>
</div>
