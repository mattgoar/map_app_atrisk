<!-- Validation failure messages -->
<% if @sales_rep.errors.any? %>
  <% @sales_rep.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @sales_rep.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_sales_rep/<%= @sales_rep.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->

      <input name="name" type="hidden" value="<%= @sales_rep.name %>">


      <!-- Label and input for active -->

      <div class="checkbox">
        <label for="active">
          <input type="checkbox" id="active" name="active" value="1" <%= "checked" if @sales_rep.active %>>
          Active
        </label>
      </div>



      <!-- Label and input for last_edited_by -->

      <input name="last_edited_by" type="hidden" value="<%= current_user.id %>">

      <button class="btn btn-warning">
        Update Sales Rep
      </button>
      or

      <a href="/sales_reps/<%= @sales_rep.id %>">Cancel</a>


    </form>

  </div>
</div>
