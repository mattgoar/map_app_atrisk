<div class="container">
  <div class="page-header">
    <h3>Implementation Information - <%= @latest_onboarding_status.client.clientname %>
    <a href="/client_informations/<%= @latest_onboarding_status.client_id %>/" class="btn btn-md btn-info">Back</a></h3>
  </div>
<div class="row">
    <div class="col-xs-12 col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Current Detail</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <table class="table table-striped table-hover">
                <tr>

                  <th>Client</th>

                  <th>Current Status</th>

                  <th>Kick-Off Date</th>

                  <th>Certification Date</th>

                  <th>Notes</th>

                  <th>Last Edited By</th>

                  <th>Last Edited On</th>

                  <th>Action</th>
                </tr>

                <tr>

                  <td><%= @latest_onboarding_status.client.clientname %></td>
                  <td><%= @latest_onboarding_status.impl_status.status_name %></td>
                  <td><%= @latest_onboarding_status.kickoff_date %></td>
                  <td><%= @latest_onboarding_status.certification_date %></td>

                  <td><%= @latest_onboarding_status.notes %></td>

                  <td><%= @latest_onboarding_status.user.last_name + ', ' + @latest_onboarding_status.user.first_name %></td>
                  <td><%= @latest_onboarding_status.updated_at %></td>

                  <td><a href="/client_onboarding_statuses/<%= @latest_onboarding_status.client_id %>/new" class="btn btn-warning  btn-sm">Update</a>

                </tr>
               </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">History</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <table class="table table-striped table-hover">
                <tr>

                  <th>Client</th>

                  <th>Current Status</th>

                  <th>Kick-Off Date</th>

                  <th>Certification Date</th>

                  <th>Notes</th>

                  <th>Last Edited By</th>

                  <th>Last Edited On</th>

                  <th>Action</th>

                <% @client_onboarding_status.each do |client| %>
                <tr>

                  <td><%= client.client.clientname %></td>

                  <td><%= client.impl_status.status_name %></td>
                  <td><%= client.certification_date %></td>
                  <td><%= client.kickoff_date %></td>
                  <td><%= client.notes %></td>

                  <td><%= client.user.last_name + ', ' + client.user.first_name %></td>
                  <td><%= client.updated_at %></td>

                  <td><a href=# class="btn btn-danger btn-sm disabled">Revert</a>

                </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
