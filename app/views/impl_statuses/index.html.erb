<div class="page-header">
  <h1>
    Impl statuses

    <a href="/impl_statuses/new" class="btn btn-lg btn-success">New Impl status</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Active</th>

        <th>Last edited by</th>

        <th>Status name</th>

        <th>Actions</th>
      </tr>

      <% @impl_statuses.each do |impl_status| %>
      <tr>

        <td><%= impl_status.active %></td>

        <td><%= impl_status.last_edited_by %></td>

        <td><%= impl_status.status_name %></td>

        <td>

          <a href="/impl_statuses/<%= impl_status.id %>" class="btn btn-primary">Show</a>
          <a href="/impl_statuses/<%= impl_status.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_impl_status/<%= impl_status.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
