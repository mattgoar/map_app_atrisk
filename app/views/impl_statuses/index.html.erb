<div class="page-header">
  <h1>
    Implementation Steps

    <a href="/impl_statuses/new" class="btn btn-lg btn-success">New step</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Active</th>

        <th>Status name</th>

        <th>Actions</th>
      </tr>

      <% @impl_statuses.each do |impl_status| %>
      <tr>

         <td>
          <% if impl_status.active %>
          <i class="fa fa-check-square fa-2x" color="green"></i>
          <% else %>
          <i class="fa fa-ban fa-2x" color="red"></i>
          <% end %>
        </td>


        <td><%= impl_status.status_name %></td>

        <td>

          <a href="/impl_statuses/<%= impl_status.id %>/edit" class="btn btn-warning">Edit</a>

          <% if impl_status.active %>
          <a href="/deactivate_impl_status/<%= impl_status.id %>" class="btn btn-danger" rel="nofollow">Deactivate</a>
          <% else %>
          <a href="/activate_impl_status/<%= impl_status.id %>" class="btn btn-success" rel="nofollow">Activate</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
