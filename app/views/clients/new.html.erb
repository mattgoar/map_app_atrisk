<!-- Validation failure messages -->
<% if @client.errors.any? %>
  <% @client.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Client</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_client" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for active -->
      <input name="active" type="hidden" value="<%= true %>">


      <!-- Label and input for last_edited_by -->
      <input name="last_edited_by" type="hidden" value="<%= current_user.id %>">




      <!-- Label and input for clientname -->

      <div class="form-group">
        <label for="clientname" class="control-label">
          Name
        </label>


        <input type="text" id="clientname" name="clientname" placeholder="Client Name" class="form-control" value="<%= @client.clientname %>">

      </div>



      <button class="btn btn-success">
        Create Client
      </button>
      or
      <a href="/clients">Cancel</a>

    </form>

  </div>
</div>
